{% extends 'base-dashboard.html.twig' %}

{% block title %}Send mail to group{% endblock %}

{% block body %}
<div class="post-a-new-job-box">
    <h3>Send a group message to {{ group.nom }}</h3>
    <div class="bar"></div>
    {{ form_start(form) }}
    <div class="row">
        <div class="form-group col-lg-12">{{ form_row(form.title) }}</div>
        <div class="form-group col-lg-12">{{ form_row(form.message) }}</div>
        <button type="submit" class="default-btn border-radius-5 mt-2">{{ button_label|default('Send') }}</button>
    {{ form_end(form, {'render_rest': false}) }}
    </div>
</div>
{% endblock %}
