{% extends 'base.html.twig' %}

{% block title %}SDG | {{ categorie.nom }}{% endblock %}

{% block body %}
    <!-- Inner Banner -->
    <div class="inner-banner">
        <div class="container">
            <div class="inner-title text-center">
                <h3>{{ categorie.nom|capitalize }}</h3>
                <ul>
                    <li>
                        <a href="{{ path('home') }}">Home</a>
                    </li>
                    <li>
                        <a href="{{ path('all_sdg') }}">All SDG</a>
                    </li>
                    <li>{{ categorie.nom }}</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Inner Banner End -->

    <!-- Job Details Area -->
    <div class="job-details-area pt-100 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="find-jobs-card d-flex align-items-center box-shadow">
                        <div class="find-jobs-img">
                            {% if categorie.logo %}
                                {% for logo in categorie.logo %}
                                    <img src="{{ asset('uploads/' ~ logo.nom) }}" alt="{{ logo.nom }}">
                                {% endfor %}
                            {% endif %}
                        </div>

                        <div class="content">
                            <h3>{{ categorie.nom|raw }}</h3>

                            <p>{{ categorie.intro|raw }}</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="job-details-widget-side pr-20">
                        <div class="job-details-widget">
                            <h3 class="title">For futher info</h3>
                            <div class="bar"></div>
                            <ul class="job-details-category">
                                <li>UN website: <span><a href="{{ categorie.link }}"></a><i class="ri-link"></i></span></li>
                            </ul>
                        </div>
                        <div class="job-details-widget">
                            <div class="job-details-social">
                            <span>Share Post:</span>
                            <ul class="social-icon">
                                <li>
                                    <a href="https://www.facebook.com/" target="_blank">
                                        <i class="ri-facebook-fill"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.instagram.com/" target="_blank">
                                        <i class="ri-instagram-fill"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://twitter.com/" target="_blank">
                                        <i class="ri-twitter-fill"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.linkedin.com/" target="_blank">
                                        <i class="ri-linkedin-fill"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        </div>
                        <div class="job-details-widget">
                            <div class="row">
                                {% for cat in categories %}
                                    <div class="col-lg-3 col-6 col-md-3">
                                        <a href="{{ path('sdg_page', {'slug': categorie.slug}) }}">
                                            {% if cat.logo %}
                                                {% for logo in cat.logo %}
                                                    <img src="{{ asset('uploads/' ~ logo.nom) }}" alt="{{ logo.nom }}">
                                                {% endfor %}
                                            {% endif %}
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="job-details-content">
                        <div class="content mb-30">
                            <h3>Description</h3>
                            <div class="bar"></div>
                            <p>{{ categorie.description }}</p>
                        </div>

                        {% if categorie.video %}
                        <h3>Video</h3>
                        <div class="bar"></div>
                        <div class="job-details-play">
                            <a href="{{ categorie.video }}" class="play-btn">
                                <i class="ri-play-circle-line"></i>
                            </a>
                        </div>
                        {% endif %}

                        <h3>Related Projects</h3>
                        <div class="bar"></div>
                        <div class="row">
                            {% for project in categorie.projects %}
                                <div class="col-lg-6">
                                    <div class="recent-job-card box-shadow">
                                        <div class="content">
                                            <div class="recent-job-img">
                                                <a href="{{ path('sdg_page', {'slug': categorie.slug}) }}">
                                                    {% if project.images %}
                                                        {% for logo in project.images %}
                                                            {% if loop.first %}
                                                                <img src="{{ asset('uploads/' ~ logo.nom) }}" alt="{{ logo.nom }}" width="70px">
                                                            {% endif %}
                                                        {% endfor %}
                                                    {% endif %}
                                                </a>
                                            </div>

                                            <h3>{{ project.nom }}</h3>

                                            <div class="job-sub-content">
                                                <ul class="job-list2">
                                                    {% for cat in project.categorie %}
                                                        <li class="time">{{ cat.nom }}</li>
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Job Details Area End -->

    <!-- Employers CV Area -->
    <div class="employers-cv-area">
        <div class="container">
            <div class="employers-cv-bg">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <div class="employers-cv-content">
                            <h2>Let Employers Find You</h2>
                            <div class="bar"></div>
                            <p>Advertise your jobs to millions of monthly users and search 15.8 million CV in our database.</p>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="employers-cv-btn">
                            <a href="mailto:contact@zoben.com">Upload Your CV</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Employers CV Area -->
{% endblock %}
