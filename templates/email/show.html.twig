{% extends 'base-dashboard.html.twig' %}

{% block title %}Email{% endblock %}

{% block body %}
    <h1>Email</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ email.code }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ email.sujet }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ email.contenu }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ email.createdAt ? email.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ email.updatedAt ? email.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('email_index') }}">back to list</a>

    <a href="{{ path('email_edit', {'id': email.id}) }}">edit</a>

    {{ include('email/_delete_form.html.twig') }}
{% endblock %}
