{% extends 'base.html.twig' %}

{% block title %}About Home Association{% endblock %}

{% block body %}
    <div class="career-area pt-100 pb-70">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="career-img">
                    <div class="row align-items-center">
                        <div class="col-6">
                            <div class="row">
                                {% for image in about.images|slice(0, 2)%}
                                <div class="col-12">
                                    <div class="images1 wow fadeInDown" data-wow-delay="000ms" data-wow-duration="1000ms">
                                        <img src="{{ asset('uploads/' ~ image.nom) }}" alt="{{ image.nom }}">
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                {% for image in about.images|slice(2, 4)%}
                                <div class="col-12">
                                    <div class="images2 wow fadeInDown" data-wow-delay="200ms" data-wow-duration="1000ms">
                                        <img src="{{ asset('uploads/' ~ image.nom) }}" alt="{{ image.nom }}">
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="career-content pl-20 wow fadeInUp" data-wow-delay="400ms" data-wow-duration="1000ms">
                    <div class="section-title">
                        <h2>HOME</h2>
                        <h4>{{ about.accroche|upper }}</h4>
                        <div class="bar"></div>
                    </div>
                    <p>{{ about.description|raw }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="company-details-content">
        <div class="company-details-play" style="background-image: url('{{ asset('images/company/back.JPG') }}');">
            <a href="{{about.video}}" class="play-btn">
                <i class="ri-play-circle-line"></i>
            </a>
        </div>
    </div>
    <div class="about-area pt-100 pb-70" style="/*! display: none; */">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-img">
                        <div class="row">
                            {% for image in about.images|slice(2, 4)%}
                            <div class="col-6">
                                <img src="{{ asset('uploads/' ~ image.nom) }}" alt="{{ image.nom }}">
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about-content pl-20">
                        <div class="section-title">
                            <h2>{{ about.titre2|capitalize }}</h2>
                            <div class="bar"></div>
                            <p>{{ about.description2|raw }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="freelancers-area pt-100 pb-70">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="section-title">
                        <h2>Our Team</h2>
                        <div class="bar"></div>
                        <p>We collect reviews from our users so you can get an honest opinion of what an experience with our website are really like!</p>
                    </div>
                </div>
            </div>
            <div class="row pt-45 justify-content-center">
                {% for team in teams %}
                <div class="col-lg-3 col-sm-6">
                    <div class="freelancers-card">
                        {% if team.photo %}
                            {% for photo in team.photo %}
                                <a href="">
                                    {% if loop.first %}<img src="{{ asset('uploads/' ~ photo.nom) }}" alt="{{ photo.nom }}">{% endif %}
                                </a>
                            {% endfor %}
                        {% endif %}
                        <div class="title">
                            <h3>
                                <a>{{ team.nom }} {{ team.prenom }}</a>
                            </h3>
                        </div>
                        <p>{{ team.role }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}