<div class="company-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="section-title">
                    <h2>Our partners</h2>
                    <div class="bar"></div>
                    <p>We collect reviews from our users so you can get an honest opinion of what an experience with our
                        website are really like!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="browse-btn float-end">

                </div>
            </div>
        </div>
        <div class="row pt-45 justify-content-center">
            {% for partenaire in partenaires %}
                <div class="col-lg-3 col-sm-6">
                    <div class="freelancers-card">
                        <a>
                            {% if partenaire.logo %}
                                {% for photo in partenaire.logo %}
                                    {% if loop.first %}<img src="{{ asset('uploads/' ~ photo.nom) }}"alt="avatar">{% endif %}
                                {% endfor %}
                            {% else %}
                                <img src="{{ asset('images/user-img/avataaars.png') }}" alt="avatar" class="thumb">
                            {% endif %}
                        </a>
                        <div class="title">
                            <h3>{{ partenaire.nom }}</h3>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>