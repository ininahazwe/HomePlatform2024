<!-- Company Area -->
<div class="company-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <div class="section-title">
                    <h2>Our partenaires</h2>
                    <div class="bar"></div>
                    <p>We collect reviews from our users so you can get an honest opinion of what an experience with our website are really like!</p>
                </div>
            </div>
        </div>

        <div class="company-slider owl-carousel owl-theme  pt-45">
            {% for partenaire in partenaires %}
            <div class="company-item">
                <a href="{{ path('partenaires_show', {'slug': partenaire.slug }) }}">
                    {% if partenaire.logo %}
                        {% for photo in partenaire.logo %}
                            {% if loop.first %}<img src="{{ asset('uploads/' ~ photo.nom) }}" alt="avatar">{% endif %}
                        {% endfor %}
                    {% else %}
                        <img src="{{ asset('images/user-img/avataaars.png') }}" alt="avatar" class="thumb">
                    {% endif %}
                </a>
                <h3><a href="company-details.html">{{ partenaire.nom }}</a></h3>
                <p><i class="ri-map-pin-line"></i> St Brooklyn</p>
                <a href="company-details.html" class="company-btn">Open Jobs - (03)</a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<!-- Company Area End -->