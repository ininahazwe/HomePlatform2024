{% extends 'base-dashboard.html.twig' %}

{% block title %}partenaire index{% endblock %}

{% block body %}
    <!-- Breadcrumb Area -->
    <div class="breadcrumb-area">
        <h1>Partners list</h1>
        <ol class="breadcrumb">
            <li class="item"><a href="{{ path('home') }}">Home</a></li>
            <li class="item">Partenaires list</li>
        </ol>
    </div>
    <!-- End Breadcrumb Area -->

    <div class="all-applicants-box">
        <h2>Partners list</h2>

        <div class="row">
            {% for partenaire in partenaires %}
                <div class="col-lg-6 col-md-12">
                    <div class="single-applicants-card">
                        <div class="image">
                            <a href="#">
                                {% if partenaire.logo %}
                                    {% for logo in partenaire.logo %}
                                        <img src="{{ asset('uploads/' ~ logo.nom) }}" alt="{{ logo.nom }}">
                                    {% endfor %}
                                {% endif %}
                            </a>
                        </div>

                        <div class="content">
                            <h3>
                                <a href="{{ path('partenaires_show', {'slug': partenaire.slug}) }}">{{ partenaire.nom }}</a>
                            </h3>

                            <div class="applicants-footer">
                                <ul class="option-list">
                                    <li><a href="{{ path('partenaires_show', {'slug': partenaire.slug }) }}"><button class="option-btn d-inline-block" data-bs-toggle="tooltip" data-bs-placement="top" title="View Aplication" type="button"><i class="ri-eye-line"></i></button></a></li>
                                    <li><a href="{{ path('partenaires_edit', {'id': partenaire.id }) }}"><button class="option-btn d-inline-block" data-bs-toggle="tooltip" data-bs-placement="top" title="Approve Aplication" type="button"><i class="ri-edit-circle-fill"></i></button></a></li>
                                    <li>{{ include('partenaires/_delete_form.html.twig') }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
