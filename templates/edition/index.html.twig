{% extends 'base-dashboard.html.twig' %}

{% block title %}Editions{% endblock %}

{% block body %}
    <!-- Breadcrumb Area -->
    <div class="breadcrumb-area">
        <h1>Editions list</h1>
        <ol class="breadcrumb">
            <li class="item"><a href="{{ path('home') }}">Home</a></li>
            <li class="item">Editions list</li>
        </ol>
    </div>
    <!-- End Breadcrumb Area -->

    <div class="all-applicants-box">
        <div class="d-flex flex-row justify-content-between">
            <h2>Editions list</h2>
            <a class="default-btn border-radius-5" href="{{ path('edition_new') }}">Add</a>
        </div>

        <div class="row">
            {% for edition in editions %}
                <div class="col-lg-6 col-md-12" id="view{{ edition.id }}">
                    <div class="single-applicants-card">
                        <div class="image">
                                {% if edition.avatar %}
                                    {% for logo in edition.avatar %}
                                        <img src="{{ asset('uploads/' ~ logo.nom) }}" alt="{{ logo.nom }}">
                                    {% endfor %}
                                {% endif %}
                        </div>

                        <div class="content">
                            <h3>
                                <a href="{{ path('edition_show', {'slug': edition.slug}) }}">{{ edition.nom }}</a>
                            </h3>

                            <ul class="job-info">
                                <li><i class="ri-map-pin-line"></i> {{ edition.city }}</li>
                                <li><i class="ri-calendar-2-line"></i> {{ edition.year }}</li>
                            </ul>

                            <div class="applicants-footer">
                                <ul class="option-list">
                                    <li><a href="{{ path('edition_show', {'slug': edition.slug }) }}"><button class="option-btn d-inline-block" data-bs-toggle="tooltip" data-bs-placement="top" title="View" type="button"><i class="ri-eye-line"></i></button></a></li>
                                    <li><a href="{{ path('edition_edit', {'id': edition.id }) }}"><button class="option-btn d-inline-block" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit" type="button"><i class="ri-edit-circle-fill"></i></button></a></li>
                                    <li>{{ include('edition/_delete_form.html.twig') }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
