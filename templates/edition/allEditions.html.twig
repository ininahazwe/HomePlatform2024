{% extends 'base.html.twig' %}

{% block title %}All Home editions{% endblock %}

{% block body %}

    <div class="browse-jobs-area pt-100 pb-70">
        <div class="container">
            <div class="section-title text-center">
                <h2>Our trainings to Transform Our World</h2>
                <div class="bar m-auto"></div>
                <p class="m-auto">The Sustainable Development Goals are the blueprint to achieve a better and more sustainable future for all.</p>
            </div>
            <!-- Company Area -->
            <div class="row pt-45 justify-content-center">
                {% for edition in editions %}
                    <div class="col-lg-4 col-md-6">
                        <div class="blog-card">
                            <a href="{{ path('edition_page', {'slug': edition.slug }) }}">
                                <div class="blog-img">
                                    {% if edition.avatar %}
                                        {% for logo in edition.avatar %}
                                            <img src="{{ asset('uploads/' ~ logo.nom) }}" alt="{{ logo.nom }}">
                                        {% endfor %}
                                    {% endif %}
                                    <div class="tag">{{ edition.city }}</div>
                                </div>
                                <div class="content">
                                    <h3>{{ edition.nom }}</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- Company Area End -->
{% endblock %}
