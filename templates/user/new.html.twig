{% extends 'base-dashboard.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <div class="post-a-new-job-box">
        <h3>Create new User</h3>
        <div class="bar"></div>
        {{ form_start(form) }}
        {{ form_row(form.civilite) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.isMentor) }}
        {{ form_row(form.groups) }}
        <button type="submit" class="default-btn btn-sm border-radius-5 mt-2">{{ button_label|default('Save') }}</button>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}
