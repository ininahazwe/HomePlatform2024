{% extends 'base-dashboard.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <!-- Dashboard -->
    <section class="user-dashboard">
        <div class="dashboard-outer">
            <div class="upper-title-box">
                <h3>Mes messages</h3>
                <div class="text">What's up?</div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <!-- Chat Widget -->
                    <div class="chat-widget">
                        <div class="widget-content">
                            <div class="row">
                                <div class="contacts_column col-xl-4 col-lg-5 col-md-12 col-sm-12 chat" id="chat_contacts">
                                    {{ include('message/sidebar.html.twig') }}
                                </div>
                                <div class=" col-xl-8 col-lg-7 col-md-12 col-sm-12 chat">
                                    {{ form_start(form, { 'attr': {'class': 'default-form'} }) }}
                                    <div class="card contacts_card">
                                        <div class="card-header msg_head">
                                            <div class="d-flex bd-highlight">
                                                <div class="user_info">
                                                    <p><strong>Ã€:</strong></p>
                                                </div>
                                            </div>

                                            {{ form_widget(form.recipient) }}

                                        </div>

                                        <div class="card-body msg_card_body">
                                            <div class="form-group">{{ form_widget(form.title) }}</div>
                                            <div class="form-group">{{ form_widget(form.message) }}</div>
                                            <button type="submit" class="theme-btn btn-style-one submit-btn">Envoyer</button>
                                        </div>

                                        <div class="card-footer">
                                            <div class="form-group mb-0">
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Dashboard -->
{% endblock %}
